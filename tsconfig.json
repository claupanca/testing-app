{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "lambda/**/*.ts",
    "lambda/shared/**/*.ts"
  ]
}